<?xml version="1.0" encoding="utf-8"?>
<ConstraintLayoutStates xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <State
        android:id="@+id/selections"
        app:constraints="@layout/layout_tabs_vertical">

        <Constraints
            app:constraints="@layout/activity_main"
            app:region_widthLessThan="560dp"/>

        <Constraints
            app:constraints="@layout/activity_main_tablet"
            app:region_widthLessThan="1030dp"
            app:region_widthMoreThan="560dp"/>

        <Constraints
            app:constraints="@layout/activity_main_laptop"
            app:region_widthMoreThan="1030dp"/>

    </State>
</ConstraintLayoutStates>